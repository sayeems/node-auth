{{> header}}
<div class="container">
    <div class="row mt-4">
        <div class="col-10">
            {{#if article.photo}}
            <img src="/uploads/{{article.photo}}" alt="" class="img-fluid">
            {{else}}
            <img src="/images/article_placeholder.png" alt="">
            {{/if}}
            <h4 class="border-bottom">{{article.title}}</h4>
            <p>
                {{article.body}}
            </p>
        </div>
        <div class="col-2">
            <a href="/create" class="btn btn-primary">Create New Article</a>
            {{#if message}}
            <p>{{message}}</p>
            {{/if}}
        </div>
    </div>
</div>
{{> footer}}